<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>


<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.citu.procrammers.eva.controllers.ArraylistViewController">
   <center>
      <AnchorPane fx:id="apVisualizer" prefHeight="720.0" prefWidth="1280.0">
         <children>
            <ToolBar prefHeight="40.0" prefWidth="200.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
              <items>
                  <TextField fx:id="tfPrompt" prefWidth="200.0" />
                <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#onButtonClick" prefWidth="100.0" text="ADD" />
                  <Button fx:id="btnRemove" mnemonicParsing="false" onAction="#onButtonClick" prefWidth="100.0" text="REMOVE" />
                  <Button fx:id="btnAddAt" mnemonicParsing="false" onAction="#onButtonClick" prefWidth="100.0" text="ADD AT" />
                  <Button fx:id="btnRemoveAt" mnemonicParsing="false" onAction="#onButtonClick" prefWidth="100.0" text="REMOVE AT" />
                  <Button fx:id="btnSearch" mnemonicParsing="false" onAction="#onButtonClick" prefWidth="100.0" text="SEARCH" />
                  <Button fx:id="btnClear" mnemonicParsing="false" onAction="#onButtonClick" prefWidth="100.0" text="CLEAR" />
              </items>
            </ToolBar>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
